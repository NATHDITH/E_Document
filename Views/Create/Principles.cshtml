<script>
    function addCharacteristic() {
        let div = document.createElement("div");
        div.classList.add("input-group", "mb-2");
        div.innerHTML = `
                    <input type="text" name="Projectobjective[]" class="form-control" required />
                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">−</button>
            `;
        document.getElementById("objective").appendChild(div);
    }

    document.addEventListener("DOMContentLoaded", function () {
        let today = new Date().toISOString().split('T')[0];
        document.getElementById("CreateDate").setAttribute("min", today);

        document.getElementById("CreateDate").addEventListener("change", function () {
            let CreateDate = this.value;
            document.getElementById("StartDate").setAttribute("min", CreateDate);
            document.getElementById("EndDate").setAttribute("min", CreateDate);
        });

        document.getElementById("StartDate").addEventListener("change", function () {
            let startDate = this.value;
            document.getElementById("EndDate").setAttribute("min", startDate);
        });
    });


</script>