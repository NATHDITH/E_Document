@model List<E_Document.Models.Document>

@{
    Layout = "_Layout";
}

<div class="main-container">
    <h1 class="custom-title-left">ส่วนการสร้างเอกสาร</h1>

    <a href="/Create/Principles">สร้างเอกสารขออนุมัติหลักการและวงเงินค่าใช้จ่ายโครงการ</a>
    <a href="/Create/Disburse">สร้างเอกสารเบิกจ่าย</a>
    <a href="/Create/Activity">สร้างเอกสารชั่วโมงกิจกรรม</a>

    <hr><hr>

    <h1 class="custom-title-left">ระบบรับ-ส่งเอกสาร</h1>

    <!-- 🟢 ฟอร์มอัปโหลดเอกสาร -->
    <h2 class="text-start">อัปโหลดเอกสาร</h2>
    <form asp-action="UploadDocument" asp-controller="Create" method="post" enctype="multipart/form-data">
        <div>
            <label>เลือกไฟล์:</label>
            <input type="file" name="file" class="form-control" required />
        </div>
        <br>
        <button type="submit" class="btn btn-primary">อัปโหลด</button>
    </form>

    <hr><hr>

    <!-- 🟢 แสดงรายการเอกสาร -->
    <h2 class="text-start">รายการเอกสาร</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ชื่อไฟล์</th>
                    <th>สถานะ</th>
                    <th>การดำเนินการ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td>@doc.FileName</td>
                        <td>@doc.Status</td>
                        <td>
                            @if (doc.Status == "Uploaded")
                            {
                                <form asp-action="SubmitDocument" asp-controller="Create" method="post">
                                    <input type="hidden" name="documentId" value="@doc.Id" />
                                    <button type="submit" class="btn btn-warning">ส่งขออนุมัติ</button>
                                </form>
                            }
                            else if (doc.Status == "In Review")
                            {
                                <span class="text-warning">รอการอนุมัติ</span>
                            }
                            else if (doc.Status == "Approved")
                            {
                                <span class="text-success">อนุมัติแล้ว</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>ไม่มีเอกสารที่อัปโหลด</p>
    }
</div>


<style>
    body {
        background-image: url('/images/background.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .main-container {
        background-color: rgba(255, 255, 255, 0.95);
        max-width: 1500px;
        margin: 40px auto;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.25);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1.display-4, h2 {
        color: #2c3e50;
        margin-bottom: 16px;
        font-weight: bold;
        text-align: center;
    }

    a {
        display: block;
        margin: 10px 0;
        font-size: 18px;
        color: #007bff;
    }

    a:hover {
        text-decoration: underline;
    }

    form {
        margin-top: 16px;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        margin-top: 5px;
    }

    .btn {
        border-radius: 8px;
    }

    table.table {
        margin-top: 20px;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
    }

    table th, table td {
        vertical-align: middle !important;
    }

    .text-success {
        font-weight: bold;
    }

    .text-warning {
        font-weight: bold;
    }

    .custom-title-left {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        text-align: left;
        margin-bottom: 16px;
    }


</style>
